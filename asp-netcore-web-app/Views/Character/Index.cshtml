@model IEnumerable<Character>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
        <h2 class="text-primary">Character List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Character" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Character</a>
    </div>
    </div>
    <br /> <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Character Id
            </th>
            <th>
                Character First Name
            </th>
            <th>
                Character Last Name
            </th>
              <th>
                Character Email
            </th>
            <th>
                Character Password
            </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    @obj.FirstName
                </td>
                <td>
                    @obj.LastName
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.Password
                </td>
                  <td>
                    <div class="w-75 btn btn-group" role="group">
                        <a asp-controller="Character" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                         <a asp-controller="Character" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
